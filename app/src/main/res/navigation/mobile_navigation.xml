<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/startupFragment">

    <fragment
        android:id="@+id/navigation_discover"
        android:name="com.example.aanandam.view.fragments.DiscoverFragment"
        android:label="@string/discover"
        tools:layout="@layout/fragment_discover">
        <action
            android:id="@+id/action_navigation_discover_to_navigation_services"
            app:destination="@id/navigation_services" />
        <action
            android:id="@+id/action_navigation_discover_to_roomDetailFragment"
            app:destination="@id/roomDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_services"
        android:name="com.example.aanandam.view.fragments.ServicesFragment"
        android:label="@string/services"
        tools:layout="@layout/fragment_services">
        <action
            android:id="@+id/action_navigation_services_to_servicesDetailFragment"
            app:destination="@id/servicesDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.aanandam.view.fragments.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <argument
            android:name="premiumUser"
            app:nullable="true"
            android:defaultValue="@null"
            app:argType="com.example.aanandam.model.entities.PremiumUserX" />
        <action
            android:id="@+id/action_navigation_profile_to_startupFragment"
            app:destination="@id/startupFragment"
             />
        <action
            android:id="@+id/action_navigation_profile_to_editProfileFragment"
            app:destination="@id/editProfileFragment" />
        <action
            android:id="@+id/action_navigation_profile_to_feedbackFragment"
            app:destination="@id/feedbackFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginUserFragment"
        android:name="com.example.aanandam.view.fragments.LoginUserFragment"
        android:label="fragment_login_user"
        tools:layout="@layout/fragment_login_user">
        <action
            android:id="@+id/action_loginUserFragment_to_navigation_discover"
            app:destination="@id/navigation_discover"
             />
        <action
            android:id="@+id/action_loginUserFragment_to_signUpFragment"
            app:destination="@id/signUpFragment"
            app:popUpTo="@id/loginUserFragment" />
        <action
            android:id="@+id/action_loginUserFragment_to_forgotPasswordFragment"
            app:destination="@id/forgotPasswordFragment" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.aanandam.view.fragments.SignUpFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up">
        <action
            android:id="@+id/action_signUpFragment_to_navigation_discover"
            app:destination="@id/navigation_discover" />
        <action
            android:id="@+id/action_signUpFragment_to_loginUserFragment"
            app:destination="@id/loginUserFragment"
            app:popUpTo="@id/signUpFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginEmployeeFragment"
        android:name="com.example.aanandam.view.fragments.LoginEmployeeFragment"
        android:label="fragment_login_employee"
        tools:layout="@layout/fragment_login_employee">
        <action
            android:id="@+id/action_loginEmployeeFragment_to_forgotPasswordFragment"
            app:destination="@id/forgotPasswordFragment" />
        <action
            android:id="@+id/action_loginEmployeeFragment_to_employeeeFragment" />
        <action
            android:id="@+id/action_loginEmployeeFragment_to_employeeeFragment2"
            app:destination="@id/employeeeFragment" />
    </fragment>
    <fragment
        android:id="@+id/startupFragment"
        android:name="com.example.aanandam.view.fragments.StartupFragment"
        android:label="fragment_startup"
        tools:layout="@layout/fragment_startup">
        <action
            android:id="@+id/action_startupFragment_to_loginEmployeeFragment"
            app:destination="@id/loginEmployeeFragment" />
        <action
            android:id="@+id/action_startupFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_startupFragment_to_loginUserFragment"
            app:destination="@id/loginUserFragment" />
        <action
            android:id="@+id/action_startupFragment_to_navigation_discover"
            app:destination="@id/navigation_discover" />
    </fragment>
    <fragment
        android:id="@+id/serviceBookFragment"
        android:name="com.example.aanandam.view.fragments.ServiceBookFragment"
        android:label="fragment_service_book"
        tools:layout="@layout/fragment_service_book" >
        <argument
            android:name="serviceInfo"
            app:argType="com.example.aanandam.model.entities.HotelServiceX" />
        <action
            android:id="@+id/action_serviceBookFragment_to_successFragment2"
            app:destination="@id/successFragment2" />
    </fragment>
    <fragment
        android:id="@+id/roomBookFragment"
        android:name="com.example.aanandam.view.fragments.RoomBookFragment"
        android:label="fragment_room_book"
        tools:layout="@layout/fragment_room_book">
        <argument
            android:name="roomInfo"
            app:argType="com.example.aanandam.model.entities.RoomX" />
    </fragment>

    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="com.example.aanandam.view.fragments.ForgotPasswordFragment"
        android:label="fragment_forgot_password"
        tools:layout="@layout/fragment_forgot_password" />
    <fragment
        android:id="@+id/applyLeaveFragment"
        android:name="com.example.aanandam.view.fragments.ApplyLeaveFragment"
        android:label="fragment_apply_leave"
        tools:layout="@layout/fragment_apply_leave" >
        <argument
            android:name="name"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/roomDetailFragment"
        android:name="com.example.aanandam.view.fragments.RoomDetailFragment"
        android:label="fragment_room_detail"
        tools:layout="@layout/fragment_room_detail">
        <argument
            android:name="id"
            app:argType="string" />

        <action
            android:id="@+id/action_roomDetailFragment_to_roomBookFragment"
            app:destination="@id/roomBookFragment" />
    </fragment>
    <fragment
        android:id="@+id/successFragment2"
        android:name="com.example.aanandam.view.fragments.SuccessFragment"
        android:label="fragment_success"
        tools:layout="@layout/fragment_success" >
        <action
            android:id="@+id/action_successFragment2_to_navigation_profile"
            app:destination="@id/navigation_profile" />
        <action
            android:id="@+id/action_successFragment2_to_navigation_discover"
            app:destination="@id/navigation_discover" />
        <action
            android:id="@+id/action_successFragment2_to_navigation_your_services"
            app:destination="@id/navigation_your_services" />
    </fragment>
    <fragment
        android:id="@+id/errorFragment"
        android:name="com.example.aanandam.view.fragments.ErrorFragment"
        android:label="fragment_error"
        tools:layout="@layout/fragment_error" >
        <action
            android:id="@+id/action_errorFragment_to_navigation_discover"
            app:destination="@id/navigation_discover" />
    </fragment>
    <fragment
        android:id="@+id/servicesDetailFragment"
        android:name="com.example.aanandam.view.fragments.ServicesDetailFragment"
        android:label="fragment_services_detail"
        tools:layout="@layout/fragment_services_detail" >
        <action
            android:id="@+id/action_servicesDetailFragment_to_serviceBookFragment"
            app:destination="@id/serviceBookFragment" />
        <argument
            android:name="id"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/employeeeFragment"
        android:name="com.example.aanandam.view.fragments.EmployeeeFragment"
        android:label="fragment_employeee"
        tools:layout="@layout/fragment_employeee" >
        <action
            android:id="@+id/action_employeeeFragment_to_editProfileFragment"
            app:destination="@id/editProfileFragment" />
        <argument
            android:name="employeeInfo"
            app:argType="com.example.aanandam.model.entities.Employee" />
        <action
            android:id="@+id/action_employeeeFragment_to_applyLeaveFragment"
            app:destination="@id/applyLeaveFragment" />
        <action
            android:id="@+id/action_employeeeFragment_to_startupFragment"
            app:destination="@id/startupFragment" />
    </fragment>
    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.example.aanandam.view.fragments.EditProfileFragment"
        android:label="fragment_edit_profile"
        tools:layout="@layout/fragment_edit_profile" >
        <action
            android:id="@+id/action_editProfileFragment_to_navigation_profile"
            app:destination="@id/navigation_profile" />
        <argument
            android:name="userData"
            app:argType="com.example.aanandam.model.entities.EditProfile"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
    <fragment
        android:id="@+id/navigation_your_services"
        android:name="com.example.aanandam.view.fragments.UserServiceDetailFragment"
        android:label="fragment_user_service_detail"
        tools:layout="@layout/fragment_user_service_detail" >
    </fragment>
    <fragment
        android:id="@+id/feedbackFragment"
        android:name="com.example.aanandam.view.fragments.FeedbackFragment"
        android:label="fragment_feedback"
        tools:layout="@layout/fragment_feedback" />
</navigation>