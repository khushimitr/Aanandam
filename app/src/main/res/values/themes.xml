<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Aanandam" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_brown</item>
        <item name="colorPrimaryVariant">@color/dark_brown</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/beige</item>
        <item name="colorSecondaryVariant">@color/medium_green</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:datePickerDialogTheme">@style/CustomDatePickerDialog</item>
    </style>

    <style name="CustomDatePickerDialog" parent="ThemeOverlay.AppCompat.Dialog">
        <!--header background-->
        <item name="colorAccent">@color/light_brown</item>
        <!--header textcolor-->
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <!--body background-->
        <item name="android:windowBackground">@color/beige</item>
        <!--selected day-->
        <item name="android:colorControlActivated">@color/light_brown</item>
        <!--days of the month-->
        <item name="android:textColorPrimary">@color/dark_green</item>
        <!--days of the week-->
        <item name="android:textColorSecondary">@color/dark_green</item>
        <!--cancel&ok-->
        <item name="android:textColor">@color/light_brown</item>
    </style>


    <style name="CustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>


    <style name="CustomChipChoice" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@drawable/background_color_chip_state_list</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomRight">@dimen/_22sdp</item>
        <item name="cornerSizeBottomLeft">@dimen/_22sdp</item>
    </style>


    <style name="ShapeAppearanceOverlay.App.CornerSize" parent="">
        <item name="cornerSizeBottomLeft">10%</item>
        <item name="cornerSizeBottomRight">10%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="Theme.Fullscreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>


