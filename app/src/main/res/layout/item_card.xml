<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/roomCard"
    android:layout_width="match_parent"
    android:layout_height="@dimen/room_card"
    android:layout_marginBottom="@dimen/margin_19"
    android:clickable="true"
    app:cardCornerRadius="@dimen/_16sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_gradient">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardRoomImage"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="0dp"
            app:cardBackgroundColor="@color/vlight_green"
            app:cardCornerRadius="@dimen/_16sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivRoom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:src="@drawable/ic_group_12" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tvTitle"
            style="@style/DarkGreenTextBold16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_12"
            android:text="Angel Aura Point"
            app:layout_constraintBottom_toTopOf="@id/tvHomeNumber"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.177"
            app:layout_constraintStart_toEndOf="@+id/cardRoomImage"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvHomeNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_12"
            android:fontFamily="@font/open_sans"
            android:text="Scope A,"
            android:textColor="@color/medium_green"
            android:textSize="@dimen/font_14"
            app:layout_constraintBottom_toTopOf="@id/tvAddress"
            app:layout_constraintStart_toStartOf="@+id/tvTitle"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:text="Lorem Ipsum, CA 94133"
            android:textColor="@color/medium_green"
            android:textSize="@dimen/font_14"
            app:layout_constraintBottom_toTopOf="@id/tvBHK"
            app:layout_constraintStart_toStartOf="@+id/tvHomeNumber"
            app:layout_constraintTop_toBottomOf="@+id/tvHomeNumber" />


        <TextView
            android:id="@+id/tvBHK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:text="2 BHK"
            android:textColor="@color/medium_green"
            android:textSize="@dimen/font_14"
            app:layout_constraintBaseline_toBaselineOf="@+id/tvPerson"
            app:layout_constraintStart_toStartOf="@+id/tvAddress" />

        <TextView
            android:id="@+id/tvPerson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_12"
            android:layout_marginTop="@dimen/_9sdp"
            android:fontFamily="@font/open_sans"
            android:text="1 person"
            android:textColor="@color/medium_green"
            android:textSize="@dimen/font_14"
            app:layout_constraintStart_toEndOf="@+id/tvBHK"
            app:layout_constraintTop_toBottomOf="@+id/tvAddress" />


        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_17sdp"
            android:fontFamily="@font/open_sans_bold"
            android:text="â‚¹ 3900"
            android:textColor="@color/dark_green"
            android:textSize="@dimen/font_16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
